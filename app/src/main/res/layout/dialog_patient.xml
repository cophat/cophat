                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tilIncomeSchool" />

            <RadioGroup
                android:id="@+id/rgEducationSchool"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEducationSchool">

                <RadioButton
                    android:id="@+id/rbIlliterateSchool"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/illiterate" />

                <RadioButton
                    android:id="@+id/rbFundamental1School"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete_fundamental_1" />

                <RadioButton
                    android:id="@+id/rbFundamental2School"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete_fundamental_2" />

                <RadioButton
                    android:id="@+id/rbMediumSchool"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete_medium" />

                <RadioButton
                    android:id="@+id/rbGraduatedSchool"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/graduated" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvReligionRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_margin"
                android:text="@string/family_religion"
                android:textSize="@dimen/title_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rgEducationSchool" />

            <RadioGroup
                android:id="@+id/tilReligionPatient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvReligionRegister">

                <RadioButton
                    android:id="@+id/rbCatholicRegister"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/catholic" />

                <RadioButton
                    android:id="@+id/rbEvangelicalRegister"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/evangelical" />

                <RadioButton
                    android:id="@+id/rbSpiritistRegister"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spiritist" />

                <RadioButton
                    android:id="@+id/rbOtherRegister"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOtherRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/other_religion">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOtherRegister"
                        style="@style/AppTheme.EditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:enabled="false"
                        android:text="@={presenter.religion}" />

                </com.google.android.material.textfield.TextInputLayout>

                <RadioButton
                    android:id="@+id/rbNoneRegister"
                    style="@style/AppTheme.RadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/none" />

            </RadioGroup>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBirthdayPatient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_margin"
                android:hint="@string/birth_patient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tilReligionPatient">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBirthdayPatient"
                    style="@style/AppTheme.EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:text="@={presenter.birthday}" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPatientAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_margin"
                android:hint="@string/age_patient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tilBirthdayPatient">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/AppTheme.EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:enabled="false"
                    android:text="@={presenter.age}" />

            </com.google.android.material.textfield.TextInputLayout>

<!--            Inicio-->

            <TextView
                android:id="@+id/tvSchoolingSchool"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_margin"
                android:text="@string/schooling"
                android:textSize="@dimen/title_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tilPatientAge" />

            <RadioGroup
                android:id="@+id/rgSchoolingSchool1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                app:layout_constraintEnd_toStartOf="@+id/rgSchoolingSchool2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSchoolingSchool">

                <RadioButton
                    android:id="@+id/rbPreSchool"
                    style="@style/AppTheme.RadioButtonTheme"
